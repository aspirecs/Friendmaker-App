{
  "name": "friendmaker-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "website",
    "discord-bot",
    "shared",
    "ml-service"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:website\" \"npm run dev:bot\"",
    "dev:website": "cd website && npm run dev",
    "dev:bot": "cd discord-bot && npm run dev",
    "build": "npm run build:shared && npm run build:website && npm run build:bot",
    "build:shared": "cd shared && npm run build",
    "build:website": "cd website && npm run build",
    "build:bot": "cd discord-bot && npm run build",
    "test": "npm run test:website && npm run test:bot",
    "test:website": "cd website && npm run test",
    "test:bot": "cd discord-bot && npm run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3"
  }
}